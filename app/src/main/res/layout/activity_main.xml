<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <EditText
        android:id="@+id/ed1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:background="#000000"
        android:gravity="right|center"
        android:textSize="56pt"
        android:layout_marginBottom="1pt"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnAC"
                android:text="AC"
                android:onClick="acEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueblack"></Button>
           <Button
            android:id="@+id/btnPlusMinus"
            android:text="+/-"
               android:onClick="numberEvent"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:layout_weight="1"
            android:background="@color/blueblack"></Button>
           <Button
            android:id="@+id/btnDivide"
            android:text="/"
               android:onClick="operatorEvent"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:layout_weight="1"
            android:background="@color/blueblack"></Button>
           <Button
            android:id="@+id/btnMultiply"
            android:text="*"
               android:onClick="operatorEvent"
               android:textColor="#FFF"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:layout_weight="1"
            android:background="@color/design_default_color_primary_dark"></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn7"
                android:text="7"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueblack"></Button>
            <Button
                android:id="@+id/btn8"
                android:text="8"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueblack"></Button>
            <Button
                android:id="@+id/btn9"
                android:text="9"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueblack"></Button>
            <Button
                android:id="@+id/btnPer"
                android:text="%"
                android:onClick="perEvent"
                android:textColor="#FFF"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark"></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn4"
                android:text="4"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueblack"></Button>
            <Button
                android:id="@+id/btn5"
                android:text="5"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueblack"></Button>
            <Button
                android:id="@+id/btn6"
                android:text="6"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueblack"></Button>
            <Button
                android:id="@+id/btnPlus"
                android:text="+"
                android:onClick="operatorEvent"
                android:textColor="#FFF"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark"></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn1"
                android:text="1"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueblack"></Button>
            <Button
                android:id="@+id/btn2"
                android:text="2"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueblack"></Button>
            <Button
                android:id="@+id/btn3"
                android:text="3"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueblack"></Button>
            <Button
                android:id="@+id/btnMinus"
                android:text="-"
                android:onClick="operatorEvent"
                android:textColor="#FFF"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark"></Button>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn0"
            android:text="0"
            android:onClick="numberEvent"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_width="46pt"
            android:layout_weight="2"
            android:background="@color/blueblack"></Button>
        <Button
            android:id="@+id/btnDot"
            android:text="."
            android:onClick="numberEvent"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_width="46pt"
            android:layout_weight="1"
            android:background="@color/blueblack"></Button>
        <Button
            android:id="@+id/btnEqual"
            android:text="="
            android:onClick="equalEvent"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:layout_weight="1"
            android:background="@color/blueblack"></Button>

    </LinearLayout>
</LinearLayout>